{
  "manifest_version": 3,
  "name": "YouTube Fallacy Checker",
  "version": "0.1.0",
  "description": "Detects logical fallacies in YouTube videos using AI and shows notifications at exact timestamps",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "src/extension/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/extension/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/extension/*.js",
        "src/**/*.*",
        "icons/*"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Toggle fallacy checker sidebar"
    }
  }
}